{% comment %}
  Etsy-style newsletter signup section
{% endcomment %}

<section class="py-16 {% if section.settings.background_style == 'color' %}bg-{{ section.settings.background_color }}{% else %}bg-cover bg-center{% endif %}" 
         {% if section.settings.background_style == 'image' and section.settings.background_image != blank %}
           style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}'); background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }}); background-blend-mode: overlay;"
         {% endif %}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      {% if section.settings.heading != blank %}
        <h2 class="text-3xl font-bold {% if section.settings.background_style == 'image' or section.settings.background_color == 'etsy-orange' %}text-white{% else %}text-etsy-dark{% endif %} mb-4">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="text-lg {% if section.settings.background_style == 'image' or section.settings.background_color == 'etsy-orange' %}text-white text-opacity-80{% else %}text-gray-500{% endif %} mb-8">
          {{ section.settings.description }}
        </p>
      {% endif %}
      
      <form action="/contact#newsletter" method="post" class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="email" 
              name="contact[email]" 
              placeholder="{{ section.settings.email_placeholder }}" 
              required
              aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}"
              class="flex-1 px-4 py-3 border-2 border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-etsy-orange focus:border-transparent">
        <button type="submit" name="commit" class="px-8 py-3 bg-etsy-orange text-white font-medium rounded-full hover:bg-opacity-90 transition-all duration-300 transform hover:scale-105">
          {{ section.settings.button_text }}
        </button>
      </form>

      {% if section.settings.show_social_sharing %}
        <div class="flex justify-center mt-8 space-x-5">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="{% if section.settings.background_style == 'image' or section.settings.background_color == 'etsy-orange' %}text-white hover:text-gray-200{% else %}text-gray-500 hover:text-etsy-orange{% endif %} transition-colors duration-300" aria-label="Facebook">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
          {% endif %}
          
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="{% if section.settings.background_style == 'image' or section.settings.background_color == 'etsy-orange' %}text-white hover:text-gray-200{% else %}text-gray-500 hover:text-etsy-orange{% endif %} transition-colors duration-300" aria-label="Instagram">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
              </svg>
            </a>
          {% endif %}
          
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="{% if section.settings.background_style == 'image' or section.settings.background_color == 'etsy-orange' %}text-white hover:text-gray-200{% else %}text-gray-500 hover:text-etsy-orange{% endif %} transition-colors duration-300" aria-label="Twitter">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          {% endif %}
          
          {% if settings.social_pinterest_link != blank %}
            <a href="{{ settings.social_pinterest_link }}" class="{% if section.settings.background_style == 'image' or section.settings.background_color == 'etsy-orange' %}text-white hover:text-gray-200{% else %}text-gray-500 hover:text-etsy-orange{% endif %} transition-colors duration-300" aria-label="Pinterest">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0c-6.627 0-12 5.373-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z" fill-rule="evenodd" clip-rule="evenodd"/>
              </svg>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Sign up for email updates on the latest collections, unique offers, and insider tips."
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ],
      "default": "color"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "etsy-light-grey",
          "label": "Light Gray"
        },
        {
          "value": "etsy-orange",
          "label": "Etsy Orange"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "etsy-light-grey"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay Opacity",
      "default": 0.5
    },
    {
      "type": "checkbox",
      "id": "show_social_sharing",
      "label": "Show social sharing icons",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup",
      "category": "Marketing"
    }
  ]
}
{% endschema %}
