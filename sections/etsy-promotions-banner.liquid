{% comment %}
  Etsy-style promotional banner section
{% endcomment %}

<section class="{% if section.settings.background_style == 'color' %}bg-{{ section.settings.background_color }}{% else %}bg-cover bg-center{% endif %}" 
         {% if section.settings.background_style == 'image' and section.settings.background_image != blank %}
           style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}'); background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }}); background-blend-mode: overlay;"
         {% endif %}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20">
    <div class="{% if section.settings.text_align == 'center' %}text-center{% elsif section.settings.text_align == 'right' %}text-right{% endif %} max-w-2xl {% if section.settings.text_align == 'center' %}mx-auto{% endif %}">
      {% if section.settings.label != blank %}
        <p class="text-sm font-bold uppercase tracking-wider {% if section.settings.background_style == 'image' %}text-white{% elsif section.settings.text_color == 'white' %}text-white{% else %}text-etsy-orange{% endif %} mb-2">
          {{ section.settings.label }}
        </p>
      {% endif %}
      
      <h2 class="text-3xl md:text-4xl font-bold {% if section.settings.background_style == 'image' %}text-white{% elsif section.settings.text_color == 'white' %}text-white{% else %}text-etsy-dark{% endif %} mb-4">
        {{ section.settings.heading }}
      </h2>
      
      {% if section.settings.description != blank %}
        <p class="text-lg md:text-xl {% if section.settings.background_style == 'image' %}text-white/80{% elsif section.settings.text_color == 'white' %}text-white/80{% else %}text-gray-500{% endif %} mb-8">
          {{ section.settings.description }}
        </p>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="inline-block px-8 py-3 text-base font-medium rounded-full {% if section.settings.button_style == 'primary' %}bg-etsy-orange text-white hover:bg-etsy-orange/90{% elsif section.settings.button_style == 'secondary' %}bg-white text-etsy-orange border-2 border-etsy-orange hover:bg-etsy-orange hover:text-white{% else %}text-etsy-orange hover:underline{% endif %} transition-all duration-300 transform hover:scale-105">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Promotional Banner",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Limited Time Offer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop our exclusive handmade collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover unique items crafted by independent artists and makers from around the world."
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ],
      "default": "color"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "etsy-light-grey",
          "label": "Light Gray"
        },
        {
          "value": "etsy-orange",
          "label": "Etsy Orange"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "etsy-light-grey"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay Opacity",
      "default": 0.5
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "dark"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "link",
          "label": "Text Link"
        }
      ],
      "default": "primary"
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner",
      "category": "Marketing"
    }
  ]
}
{% endschema %}
