{% comment %}
  Etsy-style footer with categories, help links, and newsletter signup
{% endcomment %}

<footer class="bg-etsy-light-grey border-t border-gray-200">
  <!-- Newsletter signup -->
  <div class="bg-etsy-orange">
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="mb-6 md:mb-0">
          <h3 class="text-lg font-medium text-white">{{ section.settings.newsletter_title }}</h3>
          <p class="mt-1 text-sm text-white opacity-90">{{ section.settings.newsletter_text }}</p>
        </div>
        <div class="w-full md:w-auto">
          {% form 'customer', class: 'flex max-w-md w-full' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="relative w-full">
              <input
                type="email"
                name="contact[email]"
                id="email"
                class="w-full pl-5 pr-12 py-3 border-0 rounded-l-full focus:outline-none focus:ring-2 focus:ring-white"
                placeholder="{{ section.settings.newsletter_placeholder }}"
                required
              >              <button type="submit" class="absolute inset-y-0 right-0 px-4 flex items-center bg-etsy-dark text-white rounded-r-full hover:bg-etsy-dark/90">
                {{ 'general.newsletter_form.submit' | t }}
              </button>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Main footer content -->
  <div class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Shop categories -->
      <div>
        <h3 class="text-base font-medium text-gray-900 mb-4">{{ section.settings.col1_title }}</h3>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.col1_menu].links %}
            <li>
              <a href="{{ link.url }}" class="text-sm text-gray-500 hover:text-etsy-orange">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Selling on Shopify -->
      <div>
        <h3 class="text-base font-medium text-gray-900 mb-4">{{ section.settings.col2_title }}</h3>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.col2_menu].links %}
            <li>
              <a href="{{ link.url }}" class="text-sm text-gray-500 hover:text-etsy-orange">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Help center -->
      <div>
        <h3 class="text-base font-medium text-gray-900 mb-4">{{ section.settings.col3_title }}</h3>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.col3_menu].links %}
            <li>
              <a href="{{ link.url }}" class="text-sm text-gray-500 hover:text-etsy-orange">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- About -->
      <div>
        <h3 class="text-base font-medium text-gray-900 mb-4">{{ section.settings.col4_title }}</h3>
        <ul class="space-y-3">
          {% for link in linklists[section.settings.col4_menu].links %}
            <li>
              <a href="{{ link.url }}" class="text-sm text-gray-500 hover:text-etsy-orange">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
        
        <!-- Social media icons -->
        <div class="mt-6 flex space-x-4">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="text-gray-400 hover:text-etsy-orange">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
            </a>
          {% endif %}
          
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="text-gray-400 hover:text-etsy-orange">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </a>
          {% endif %}
          
          {% if settings.social_pinterest_link != blank %}
            <a href="{{ settings.social_pinterest_link }}" class="text-gray-400 hover:text-etsy-orange">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/></svg>
            </a>
          {% endif %}
          
          {% if settings.social_youtube_link != blank %}
            <a href="{{ settings.social_youtube_link }}" class="text-gray-400 hover:text-etsy-orange">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Bottom copyright bar -->
    <div class="mt-10 pt-8 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <div>
        <p class="text-xs text-gray-500">
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All Rights Reserved.
        </p>
      </div>
      <div class="flex flex-wrap gap-4">
        {% for link in linklists[section.settings.bottom_menu].links %}
          <a href="{{ link.url }}" class="text-xs text-gray-500 hover:text-etsy-orange">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Etsy Footer",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Yes! Send me exclusive offers and unique gift ideas"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Newsletter placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "col1_title",
      "label": "Column 1 title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "col1_menu",
      "label": "Column 1 menu"
    },
    {
      "type": "text",
      "id": "col2_title",
      "label": "Column 2 title",
      "default": "Sell"
    },
    {
      "type": "link_list",
      "id": "col2_menu",
      "label": "Column 2 menu"
    },
    {
      "type": "text",
      "id": "col3_title",
      "label": "Column 3 title",
      "default": "Help"
    },
    {
      "type": "link_list",
      "id": "col3_menu",
      "label": "Column 3 menu"
    },
    {
      "type": "text",
      "id": "col4_title",
      "label": "Column 4 title",
      "default": "About"
    },
    {
      "type": "link_list",
      "id": "col4_menu",
      "label": "Column 4 menu"
    },
    {
      "type": "link_list",
      "id": "bottom_menu",
      "label": "Bottom footer menu"
    }
  ],
  "presets": [
    {
      "name": "Etsy Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
