[  {
    "name": "theme_info",
    "theme_name": "Etsy Clone Theme",
    "theme_version": "1.1.0",
    "theme_author": "Custom Developer",
    "theme_documentation_url": "https://github.com/example/etsy-clone-theme",
    "theme_support_url": "https://github.com/example/etsy-clone-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#F1641E"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#222222"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#4A6EE0"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Body Text",
        "default": "#222222"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Headings",
        "default": "#222222"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Choices"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Headings",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body text",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "label": "Base font size",
        "min": 12,
        "max": 18,
        "step": 1,
        "unit": "px",
        "default": 16
      }
    ]
  },
  {
    "name": "Product Grid",
    "settings": [
      {
        "type": "header",
        "content": "Product Card"
      },
      {
        "type": "select",
        "id": "product_image_ratio",
        "label": "Product image ratio",
        "options": [
          {
            "value": "square",
            "label": "Square"
          },
          {
            "value": "portrait",
            "label": "Portrait"
          },
          {
            "value": "landscape",
            "label": "Landscape"
          }
        ],
        "default": "square"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "label": "Show product rating",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/shopify"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/shopify"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/shopify"
      }
    ]
  }
]
