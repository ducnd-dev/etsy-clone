{% comment %}
  Etsy-style collection page
{% endcomment %}

{% paginate collection.products by 24 %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Collection header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-etsy-dark">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="mt-4 text-gray-500">{{ collection.description }}</div>
    {% endif %}
  </div>  <!-- Product grid with filters and sorting -->
  {% render 'etsy-product-grid', 
     products: collection.products, 
     context: 'collection', 
     show_filters: true, 
     show_sorting: true,
     container_id: 'collection-product-grid' %}
  <!-- Pagination -->
  {% render 'etsy-pagination', paginate: paginate, context: collection.title %}
</div>

{% endpaginate %}
