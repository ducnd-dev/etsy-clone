{% comment %}
  Etsy-style search results page
{% endcomment %}

{% paginate search.results by 20 %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Search results header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-etsy-dark">
      {% if search.performed %}
        {% if search.results_count == 0 %}
          No results found for "{{ search.terms }}"
        {% else %}
          Search results for "{{ search.terms }}"
        {% endif %}
      {% else %}
        Search our store
      {% endif %}
    </h1>
    
    <!-- Search form -->
    <div class="mt-6">
      <form action="/search" method="get" class="flex max-w-md">
        <div class="relative w-full">
          <input type="text" 
                name="q" 
                value="{{ search.terms | escape }}"
                placeholder="Search for anything" 
                class="w-full pl-4 pr-10 py-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-etsy-orange focus:border-transparent">
          <button type="submit" class="absolute inset-y-0 right-0 px-4 flex items-center bg-etsy-orange text-white rounded-r-full hover:bg-opacity-90">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>

  {% if search.performed %}
    {% if search.results_count > 0 %}
      <!-- Search filter and sort options -->
      <div class="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center border-b border-gray-200 pb-4">
        <!-- Result count -->
        <div class="text-sm text-gray-500 mb-4 md:mb-0">
          {{ search.results_count }} results
        </div>
        
        <!-- Filter buttons -->
        <div class="flex flex-wrap gap-2">
          <button class="px-4 py-2 rounded-full text-sm font-medium bg-etsy-orange text-white hover:bg-opacity-90">
            All Results
          </button>
          
          {% if search.types contains 'product' %}
            <button class="px-4 py-2 rounded-full text-sm font-medium bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
              Items ({{ search.results_count }})
            </button>
          {% endif %}
          
          {% if search.types contains 'article' %}
            <button class="px-4 py-2 rounded-full text-sm font-medium bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
              Articles
            </button>
          {% endif %}
          
          {% if search.types contains 'page' %}
            <button class="px-4 py-2 rounded-full text-sm font-medium bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
              Pages
            </button>
          {% endif %}
          
          <!-- Sort dropdown -->
          <div class="relative inline-block text-left">
            <button class="px-4 py-2 rounded-full text-sm font-medium bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 flex items-center">
              <span>Sort by: Relevancy</span>
              <svg class="ml-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Product grid -->
      <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-4 gap-y-8">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            <div class="group">
              <div class="aspect-w-4 aspect-h-3 rounded-lg overflow-hidden bg-gray-100">
                <a href="{{ item.url }}">                  {% if item.featured_image != blank %}
                    <img 
                      src="{{ item.featured_image | image_url: width: 350 }}" 
                      alt="{{ item.featured_image.alt | escape }}"
                      width="350" height="262" 
                      class="w-full h-full object-center object-cover group-hover:opacity-75"
                      loading="lazy">
                  {% else %}
                    <div class="w-full h-full flex items-center justify-center bg-gray-200">
                      <span class="text-gray-500">No image</span>
                    </div>
                  {% endif %}
                </a>
              </div>
              
              <!-- Product info -->
              <div class="mt-4">
                <h3 class="text-sm text-gray-700 font-medium">
                  <a href="{{ item.url }}">
                    {{ item.title | truncate: 50 }}
                  </a>
                </h3>
                
                <!-- Shop name (vendor) -->
                <p class="mt-1 text-sm text-gray-500">{{ item.vendor }}</p>
                
                <!-- Rating snippet - pulls from product metafields or third-party app -->
                {% render 'etsy-product-rating', product: item %}
                
                <!-- Sale and price -->
                <div class="mt-1 flex items-center">
                  {% if item.compare_at_price > item.price %}
                    <span class="text-sm font-medium text-red-600">Sale</span>
                    <span class="ml-2 text-sm line-through text-gray-500">{{ item.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="{% if item.compare_at_price > item.price %}ml-2{% endif %} text-sm font-medium text-gray-900">
                    {{ item.price | money }}
                  </span>
                </div>
                
                <!-- Free shipping if applicable -->
                {% if item.metafields.my_fields.free_shipping %}
                  <p class="mt-1 text-xs text-etsy-orange">FREE shipping</p>
                {% endif %}
                
                <!-- Number sold -->
                {% if item.metafields.my_fields.items_sold %}
                  <p class="mt-1 text-xs text-gray-500">{{ item.metafields.my_fields.items_sold }} sold</p>
                {% endif %}
              </div>
            </div>
          {% else %}
            <!-- Non-product results (articles, pages) -->
            <div class="col-span-1 md:col-span-2 bg-gray-50 rounded-lg p-6">
              <h3 class="text-lg font-medium text-etsy-dark">
                <a href="{{ item.url }}" class="hover:text-etsy-orange">{{ item.title }}</a>
              </h3>
              {% if item.object_type == 'article' and item.published_at %}
                <p class="mt-1 text-sm text-gray-500">{{ item.published_at | date: "%B %d, %Y" }}</p>
              {% endif %}
              {% if item.content %}
                <div class="mt-2 text-sm text-gray-500">
                  {{ item.content | strip_html | truncatewords: 30 }}
                </div>
              {% endif %}
              <a href="{{ item.url }}" class="mt-3 inline-flex items-center text-sm font-medium text-etsy-orange hover:underline">
                Read more
                <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <div class="flex justify-center mt-12">
          <nav class="relative z-0 inline-flex shadow-sm -space-x-px" aria-label="Pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
            {% endif %}
            
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                  {{ part.title }}
                </a>
              {% elsif part.title == paginate.current_page %}
                <span class="relative inline-flex items-center px-4 py-2 border border-etsy-orange bg-etsy-orange bg-opacity-10 text-sm font-medium text-white">
                  {{ part.title }}
                </span>
              {% else %}
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                  {{ part.title }}
                </span>
              {% endif %}
            {% endfor %}
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
            {% endif %}
          </nav>
        </div>
      {% endif %}
      
    {% else %}
      <!-- No results message -->
      <div class="text-center py-12 border-t border-b border-gray-200">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No results found for "{{ search.terms }}"</h3>
        <p class="mt-1 text-sm text-gray-500">Try checking your spelling or using different words.</p>
        
        <!-- Popular searches -->
        <div class="mt-6">
          <h4 class="text-sm font-medium text-gray-700">Popular searches:</h4>
          <div class="mt-2 flex flex-wrap justify-center gap-2">
            <a href="/search?q=jewelry" class="px-4 py-2 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200">
              Jewelry
            </a>
            <a href="/search?q=home+decor" class="px-4 py-2 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200">
              Home Decor
            </a>
            <a href="/search?q=gifts" class="px-4 py-2 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200">
              Gifts
            </a>
            <a href="/search?q=wall+art" class="px-4 py-2 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200">
              Wall Art
            </a>
          </div>
        </div>
      </div>
    {% endif %}
  {% endif %}
</div>
{% endpaginate %}
